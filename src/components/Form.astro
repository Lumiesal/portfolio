<form class="flex flex-wrap pt-8">
    <!-- Campo Nombre -->
    <div class="w-full md:w-1/2 mb-4">
      <label for="nombre" class="block text-sm font-medium text-gray-700 hidden">Nombre</label>
      <input type="text" id="nombre" name="nombre" placeholder="Nombre *" class="w-full px-3 py-2 rounded-lg border border-gray-300 bg-gray-200 focus:outline-none focus:border-blue-500" required>
    </div>

    <!-- Campo Apellidos -->
    <div class="w-full md:w-1/2 mb-4">
      <label for="apellidos" class="block text-sm font-medium text-gray-700 hidden">Apellidos</label>
      <input type="text" id="apellidos" name="apellidos" placeholder="Apellidos" class="w-full px-3 py-2 rounded-lg border border-gray-300 bg-gray-200 focus:outline-none focus:border-blue-500" required>
    </div>

    <!-- Campo Email -->
    <div class="w-full md:w-1/2 mb-4">
      <label for="email" class="block text-sm font-medium text-gray-700 hidden">Email</label>
      <input type="email" id="email" name="email" placeholder="Correo electrónico" class="w-full px-3 py-2 rounded-lg border border-gray-300 bg-gray-200 focus:outline-none focus:border-blue-500" required>
    </div>

    <!-- Campo Teléfono -->
    <div class="w-full md:w-1/2 mb-4">
      <label for="telefono" class="block text-sm font-medium text-gray-700 hidden">Teléfono</label>
      <input type="tel" id="telefono" name="telefono" placeholder="Teléfono" class="w-full px-3 py-2 rounded-lg border border-gray-300 bg-gray-200 focus:outline-none focus:border-blue-500" required>
    </div>

    <!-- Campo Mensaje -->
    <div class="w-full mb-4">
      <label for="mensaje" class="block text-sm font-medium text-gray-700 hidden">Mensaje</label>
      <textarea id="mensaje" name="mensaje" rows="4" placeholder="Escribe tu mensaje aquí..." class="w-full px-3 py-2 rounded-lg border border-gray-300 bg-gray-200 focus:outline-none focus:border-blue-500" required></textarea>
    </div>

    <!-- Botón Enviar -->
    <button type="submit" class="w-max bg-custom-green text-white py-2 px-4 rounded-lg focus:outline-none">
        Enviar
    </button>
  </form>
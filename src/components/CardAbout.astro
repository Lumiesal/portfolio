---
interface Props {
	time: string;
	position: string;
	company: string;
}

const { time, position, company } = Astro.props;
---

<div class="link-card md:w-11/12 bg-white p-8 mt-7 rounded-[20px]">
	<div>
		<span class="text-xl ">
			<strong class="text-custom-green">
				{time}
			</strong>
		</span>
		<h3 class="text-2xl">
			<strong>
				{position}
			</strong>
		</h3>
		<p class="font-light">
			{company}
		</p>
	</div>
</div>

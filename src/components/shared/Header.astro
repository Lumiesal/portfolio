<script>
    // Seleccionar el header
    const theHeader = document.getElementById('header');

    // Manejar el evento de scroll
    window.addEventListener('scroll', () => {
      // Verificar la posiciÃ³n de scroll
      if (window.scrollY > 50) {
        // Agregar la clase 'fijado' al header cuando se hace scroll hacia abajo
        theHeader.classList.add('fijado');
      } else {
        // Quitar la clase 'fijado' del header cuando se vuelve a la parte superior
        theHeader.classList.remove('fijado');
      }
    });
</script>


---
import Layout from '../layouts/Layout.astro';
import CardProjects from '../components/CardProjects.astro';
import CardAbout from '../components/CardAbout.astro';
import ItemInfo from '../components/ItemInfo.astro';
import TitleSection from '../components/TitleSection.astro';
import Form from '../components/Form.astro';
---

<Layout title="Portfolio">
		<section id="home" class="home">
			<div class="content max-w-9xl m-auto pt-40 px-5 flex flex-col">
				<div class="content-title mb-16 w-full order-1">
					<div class="max-w-max mx-auto relative">
						<img class="absolute -right-6 -top-6" src="icon-green-subtitle.svg" alt="Logo SVG">
						<span class="block max-w-max mx-auto mb-3 py-2 px-5 border-solid border-2 rounded-full">Hola</span>
					</div>
					<div class="max-w-max mx-auto relative">
						<img class="absolute left-0 -bottom-12" src="icon-green-title.svg" alt="Logo SVG">
						<h1 class="title text-6xl md:text-8xl text-center font-semibold w-full max-w-4xl mx-auto">Soy <span class="text-custom-green">Luis</span>, Desarollador Web</h1>
					</div>
				</div>
				<div class="content-image flex justify-center w-full order-3">
					<figure class="-mt-32 transition-all"><img src="dasarrollador-luis.png" alt=""></figure>
				</div>
				<div class="content-stars w-full flex justify-between align-middle order-2">
					<div>
						<i class="fas fa-quote-left text-custom-gray text-3xl"></i>
						<p class="max-w-80">
						Transformo ideas en experiencias 
						web emocionantes que destacan 
						tu presencia digital.
						</p>
					</div>
					<div>
						<div class="mb-5">
							<i class="fas fa-star text-custom-green text-3xl"></i>
							<i class="fas fa-star text-custom-green text-3xl"></i>
							<i class="fas fa-star text-custom-green text-3xl"></i>
							<i class="fas fa-star text-custom-green text-3xl"></i>
							<i class="fas fa-star text-custom-green text-3xl"></i>							
						</div>						
						<div class="flex flex-col items-end"><span class="block text-custom-gray text-5xl font-bold mb-2">+4 Años</span> De Experincia</div>
					</div>
				</div>
				
			</div>
		</section>
		<section id="projects" class="projects">
			<div class="content max-w-9xl m-auto py-14 px-5">
				<div class="content-title"><TitleSection classAdd="max-w-[426px]">Échale un vistazo a mi <span class="text-custom-green ">portafolio</span>.</TitleSection></div>
				<div class="py-12 flex gap-5">
					<CardProjects 
						title="JMteam"
						body="Lorem ipsum dolor sit amet consectetur adipisicing elit. Eaque, voluptatem explicabo. Fugit maxime iusto, modi facilis voluptates reiciendis rem laboriosam deleniti iste autem ut consequatur unde quasi. Quisquam pariatur sit architecto eos deleniti?"
						urlImage="jmteam.webp"
						/>						
					<CardProjects 
						title="Servicentro"
						body="Lorem ipsum dolor sit amet consectetur adipisicing elit. Eaque, voluptatem explicabo. Fugit maxime iusto, modi facilis voluptates reiciendis rem laboriosam deleniti iste autem ut consequatur unde quasi. Quisquam pariatur sit architecto eos deleniti?"
